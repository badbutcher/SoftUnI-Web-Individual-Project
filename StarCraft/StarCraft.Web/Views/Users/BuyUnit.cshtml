@model UnitBuyViewModel
@{
    ViewData["Title"] = "Buy Unit";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Mineral cost</th>
            <th>Gas cost</th>
            <th>Health</th>
            <th>Damage</th>
            <th>Quantity</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var unit in Model.Units)
            {
            <tr>
                <th><img src="data:image;base64,@Convert.ToBase64String(unit.Image)" width="100" height="100" /></th>
                <td>@unit.Name</td>
                <td>@unit.MineralCost</td>
                <td>@unit.GasCost</td>
                <td>@unit.Health</td>
                <td>@unit.Damage</td>
                <td>
                    @*<select asp-for="Quantity" class="form-control">
                            <option value="1">1</option>
                            <option value="5">5</option>
                            <option value="10">10</option>
                            <option value="25">25</option>
                        </select>*@
                </td>
                <td>
                    <form method="post" asp-route-unitid="@unit.Id">
                        <input type="submit" value="Buy" class="btn btn-success" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>