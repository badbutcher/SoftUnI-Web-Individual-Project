@model IEnumerable<BasicUnitInfoServiceModel>
@{
    ViewData["Title"] = "All Units";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Mineral cost</th>
            <th>Gas cost</th>
            <th>Health</th>
            <th>Damage</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var unit in Model)
        {
            <tr>
                <th class="col-md-1"><img src="data:image;base64,@Convert.ToBase64String(unit.Image)" width="50" height="50" /></th>
                <td class="col-md-1">@unit.Name</td>
                <td class="col-md-1">@unit.MineralCost</td>
                <td class="col-md-1">@unit.GasCost</td>
                <td class="col-md-1">@unit.Health</td>
                <td class="col-md-1">@unit.Damage</td>
                <td class="col-md-3">
                    <form method="get">
                        <input type="submit" value="Edit" asp-action="Edit" asp-route-id="@unit.Id" class="btn btn-warning btn-lg" />
                        <input type="submit" value="Delete" asp-action="Delete" asp-route-id="@unit.Id" class="btn btn-danger btn-lg" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>