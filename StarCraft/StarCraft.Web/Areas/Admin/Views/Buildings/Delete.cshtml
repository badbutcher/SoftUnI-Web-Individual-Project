@model DeleteBuildingModel
@{
    ViewData["Title"] = "Delete";
}

<h2 class="darkBackground">@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6 darkBackground">
        <form method="post" asp-action="DeleteBuilding" asp-route-id="@Model.Id" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <img src="data:image;base64,@Convert.ToBase64String(Model.Building.Image)" width="100" height="100" />
            </div>
            <div class="form-group">
                <label asp-for="Building.Name"></label>
                <input readonly asp-for="Building.Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Building.MineralCost"></label>
                <input readonly asp-for="Building.MineralCost" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Building.GasCost"></label>
                <input readonly asp-for="Building.GasCost" class="form-control" />
            </div>
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
    </div>
</div>